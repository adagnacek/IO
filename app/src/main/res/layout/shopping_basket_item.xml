<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/shape_wishlist">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="0dp">
        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_width="@dimen/item_button"
            android:layout_height="@dimen/item_button"
            android:background="@drawable/icon_button_clear"
            android:paddingTop="7dp"
            android:tint="@color/mainPrimaryDark"
            android:onClick="deleteB"
            />
        <TextView
            android:id="@+id/shopping_basket_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="TEXT_NOT_LOADED"
            android:textColor="@color/mainLightAccent"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:paddingTop="7dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            />
        <ImageButton
            android:layout_marginRight="10dp"
            android:layout_width="@dimen/item_button"
            android:layout_height="@dimen/item_button"
            android:layout_gravity="end"
            android:background="@drawable/icon_button_done"
            android:paddingTop="7dp"
            android:onClick="doneB"
            android:tint="@color/mainPrimaryDark"
            />
    </FrameLayout>

    <LinearLayout
        android:paddingBottom="7dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/shopping_basket_item_pricing"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/mainPrimaryDark"
            android:text="0.00 ~ 0.00"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/shopping_basket_item_ammount"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/mainPrimaryDark"
            android:text="x999"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>
