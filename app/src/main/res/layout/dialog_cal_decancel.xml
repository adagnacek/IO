<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_day_event_rectangle">

    <TextView
        android:id="@+id/cal_question_decancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TO_REPLACE"
        android:textSize="22dp"
        android:textColor="@color/mainLightAccent"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cal_question_decancel_yes"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_day_event_rectangle"
            android:padding="5dp"
            android:textSize="20dp"
            android:textColor="@color/mainLightAccent"
            android:text="YES"/>
        <Button
            android:id="@+id/cal_question_decancel_no"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_day_event_rectangle"
            android:padding="5dp"
            android:textSize="20dp"
            android:textColor="@color/mainLightAccent"
            android:text="NO"/>
    </LinearLayout>

</LinearLayout>