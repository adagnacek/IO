<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/shape_round_rectangle2"
    android:padding="5dp"
    >

    <ImageButton
        android:id="@+id/goal_delete_butt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:background="@drawable/icon_button_clear"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/goals_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:text="TEXT_NOT_LOADED"
            android:textColor="@color/mainAccent"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold|italic"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/goals_item_days"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="25dp"
        android:text="TEXT_NOT_LOADED"
        android:textColor="@color/mainLightAccent"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="25dp"
        android:fontFamily="sans-serif-light"/>
    <TextView
        android:id="@+id/goals_item_progress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="25dp"
        android:text="TEXT_NOT_LOADED"
        android:textColor="@color/mainLightAccent"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="35dp"
        android:fontFamily="sans-serif-light"/>

    </LinearLayout>

    </LinearLayout>
</LinearLayout>