<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/dialog_reminders_add_rootView"
        android:background="@drawable/shape_reminders_dialog"
        android:padding="20dp">

        <TextView
            android:id="@+id/product_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textSize="30dp"
            android:textColor="@color/mainLightAccent"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/product_Quantity"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/mainLightAccent"
            android:buttonTint="@color/mainLightAccent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">
            <Button
                android:id="@+id/cancel_reminders_butt"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="@string/Cancel"
                android:background="@drawable/shape_reminders_button"
                android:textColor="@color/mainPrimaryDark"
                android:layout_margin="7dp"/>
            <Button
                android:id="@+id/basket_wishlist_butt"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:text="@string/Edit_Quantity"
                android:background="@drawable/shape_reminders_button"
                android:textColor="@color/mainPrimaryDark"
                android:layout_margin="7dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>