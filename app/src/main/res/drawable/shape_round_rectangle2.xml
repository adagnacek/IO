<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:top="7dp">
        <shape
            android:shape="rectangle" >

                <solid android:color="@color/mainLightAccent"/>

                <corners
                    android:radius="10dp" />
        </shape>
    </item>
    <item android:top="7dp" android:bottom="3dp">
        <shape
            android:shape="rectangle" >

                <gradient
                    android:angle="45"
                    android:centerX="0.9"
                    android:centerY="0.9"
                    android:endColor="@color/mainPrimaryDark"
                    android:gradientRadius="100"
                    android:startColor="@color/mainPrimary"
                    android:type="linear" />

                <corners
                    android:radius="10dp" />
        </shape>
    </item>
</layer-list>